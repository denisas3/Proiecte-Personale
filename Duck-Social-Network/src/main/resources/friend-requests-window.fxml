<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="curs3.io.controller.FriendRequestsController"
      spacing="15" alignment="CENTER" prefWidth="520" prefHeight="420">

    <Label text="Friend Requests" style="-fx-font-size: 24px; -fx-font-weight: bold"/>

    <TableView fx:id="requestTable" prefWidth="480" prefHeight="300">
        <columns>
            <TableColumn fx:id="fromColumn" text="From User" prefWidth="240"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
            <TableColumn fx:id="actionColumn" text="Actions" prefWidth="140"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Refresh" onAction="#handleRefresh" prefWidth="120"/>
        <Label fx:id="statusLabel" />
    </HBox>

</VBox>
