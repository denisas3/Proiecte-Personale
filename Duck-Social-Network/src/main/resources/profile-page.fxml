<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="curs3.io.controller.ProfileController"
      spacing="12"
      prefWidth="520"
      prefHeight="520">

    <padding>
        <Insets top="18" right="18" bottom="18" left="18"/>
    </padding>

    <!-- HEADER: POZÄ‚ + USER INFO -->
    <HBox spacing="16" alignment="CENTER_LEFT">

        <ImageView fx:id="profileImage"
                   fitWidth="90"
                   fitHeight="90"
                   preserveRatio="true"
                   smooth="true"/>

        <VBox spacing="4">
            <Label fx:id="usernameLabel"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
            <Label fx:id="emailLabel"
                   style="-fx-text-fill: gray;"/>
        </VBox>

        <Region HBox.hgrow="ALWAYS"/>

        <Button fx:id="actionBtn"
                text="Send Request"
                onAction="#handleAction"/>
    </HBox>

    <Separator/>

    <!-- COUNTERS -->
    <HBox spacing="25" alignment="CENTER_LEFT">
        <VBox>
            <Label text="Friends" style="-fx-text-fill: gray;"/>
            <Label fx:id="friendsCountLabel"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        </VBox>

        <VBox>
            <Label text="Pending requests" style="-fx-text-fill: gray;"/>
            <Label fx:id="pendingCountLabel"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        </VBox>
    </HBox>

    <Separator/>

    <!-- FRIENDS LIST -->
    <Label text="Friends list"
           style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

    <ListView fx:id="friendsList" prefHeight="260"/>

</VBox>
