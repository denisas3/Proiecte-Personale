<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.restaurante.controller.ZborController">

    <!-- Header -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #2196F3; -fx-padding: 15;">
            <Label text="Zboruri" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="24"/>
                </font>
            </Label>
            <Label fx:id="userLabel" textFill="WHITE">
                <font>
                    <Font size="14"/>
                </font>
            </Label>
        </VBox>
    </top>

    <!-- Tabel Central -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- COMBO BOX + DATA PICKER -->
            <HBox spacing="10">
                <ComboBox fx:id="fromCombo" promptText="From"/>
                <ComboBox fx:id="toCombo" promptText="To"/>
                <DatePicker fx:id="datePicker" promptText="Data plecarii"/>
                <Button text="Filtreaza" onAction="#handleFilter"/>
            </HBox>

            <!-- Tabelul -->
            <TableView fx:id="zboruriTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="de_unde" text="From" prefWidth="150"/>
                    <TableColumn fx:id="pana_unde" text="To" prefWidth="250"/>
                    <TableColumn fx:id="decolare" text="Decolare" prefWidth="250"/>
                    <TableColumn fx:id="aterizare" text="Aterizare" prefWidth="250"/>
                    <TableColumn fx:id="loc" text="Loc" prefWidth="250"/>
                    <TableColumn fx:id="locDisponibileColumn" text="Disponibile" prefWidth="120"/>

                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

            <VBox spacing="10">
                <!-- BUTOANE PT PAGINARE -->
                <HBox spacing="10">
                    <Button text="Previous" onAction="#handlePrevious"/>
                    <Label fx:id="pageLabel" text="1 / 1"/>
                    <Button text="Next" onAction="#handleNext"/>
                </HBox>

                <!-- BUTON DE PE CARE SA CUMPERI BILETE -->
                 <HBox spacing="10">
                    <Button text="Cumpara" onAction="#handleCumpara"/>
                </HBox>
            </VBox>
        </VBox>
    </center>



</BorderPane>