<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.restaurante.controller.AdminController">

    <top>
        <Label text="Market Admin - Transactions"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10;"/>
    </top>

    <center>
        <TableView fx:id="transactionsTable">
            <columns>
                <TableColumn fx:id="traderColumn" text="Trader" prefWidth="160"/>
                <TableColumn fx:id="typeColumn" text="Type" prefWidth="80"/>
                <TableColumn fx:id="coinColumn" text="Coin" prefWidth="120"/>
                <TableColumn fx:id="priceColumn" text="Price" prefWidth="120"/>
                <TableColumn fx:id="timeColumn" text="Timestamp" prefWidth="220"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>
