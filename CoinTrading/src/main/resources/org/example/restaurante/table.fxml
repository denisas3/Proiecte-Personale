<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.restaurante.controller.UserController">

    <!-- Header -->
    <top>
        <VBox spacing="6" style="-fx-background-color: #1e88e5; -fx-padding: 12;">
            <Label text="Trader" textFill="WHITE" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <HBox spacing="20">
                <Label text="Nume:" textFill="WHITE"/>
                <Label fx:id="usernameLabel" textFill="WHITE" style="-fx-font-weight: bold;"/>

                <Label text="Buget:" textFill="WHITE"/>
                <Label fx:id="bugetLabel" textFill="WHITE" style="-fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </top>

    <!-- Tabel Central -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>


            <!-- Tabelul -->
            <TableView fx:id="coinsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="numeColumn" text="Nume Coin" prefWidth="150"/>
                    <TableColumn fx:id="pretColumn" text="Pret Coin" prefWidth="250"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>

    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button text="Buy Coin" onAction="#handleBuy"/>
            <Button text="Sell Coin" onAction="#handleSell"/>
        </HBox>
    </bottom>


</BorderPane>