<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.restaurante.controller.DetaliuController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Header -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #2196F3; -fx-padding: 15;">
            <Label text="Detalii MaÈ™ina" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="24"/>
                </font>
            </Label>
            <Label fx:id="masinaLabel" textFill="WHITE">
                <font>
                    <Font size="14"/>
                </font>
            </Label>
        </VBox>
    </top>


    <!-- Tabel Central -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Tabelul -->
            <TableView fx:id="detaliiTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="detaliiColumn" text="Detalii" prefWidth="150"/>
                    <TableColumn fx:id="comentariuColumn" text="Comentariu" prefWidth="250"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>


            <Label text="Comentariu:">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <TextField fx:id="comentariuField" promptText="Enter comentariu"
                       prefWidth="250.0"/>
        </VBox>
    </center>

    <!-- Footer cu butoane -->
    <bottom>

        <HBox spacing="10" alignment="CENTER" style="-fx-background-color: #f5f5f5; -fx-padding: 15;">
            <Button text="Adauga Comentariu!" onAction="#handleComentariu"
                    prefWidth="150.0" defaultButton="true">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>
        </HBox>
    </bottom>

</BorderPane>
