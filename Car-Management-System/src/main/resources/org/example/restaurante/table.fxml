<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.restaurante.controller.MasinaController">

    <!-- Header -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #2196F3; -fx-padding: 15;">
            <Label text="Gestiune Mașini" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="24"/>
                </font>
            </Label>
            <Label fx:id="userLabel" textFill="WHITE">
                <font>
                    <Font size="14"/>
                </font>
            </Label>
        </VBox>
    </top>

    <!-- Tabel Central -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Bara de căutare -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Căutare:">
                    <font>
                        <Font size="14"/>
                    </font>
                </Label>
                <TextField fx:id="searchField" promptText="Caută după denumire, descriere sau status..."
                           HBox.hgrow="ALWAYS" prefWidth="300"/>
            </HBox>

            <!-- Tabelul -->
            <TableView fx:id="masiniTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="denumireColumn" text="Denumire" prefWidth="150"/>
                    <TableColumn fx:id="descriereColumn" text="Descriere" prefWidth="250"/>
                    <TableColumn fx:id="pretColumn" text="Preț de Bază" prefWidth="120"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="120"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <!-- Footer cu butoane -->
    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-background-color: #f5f5f5; -fx-padding: 15;">
            <Button text="Detalii!" onAction="#handleDetalii"
                    prefWidth="150.0" defaultButton="true">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>
        </HBox>
    </bottom>

</BorderPane>